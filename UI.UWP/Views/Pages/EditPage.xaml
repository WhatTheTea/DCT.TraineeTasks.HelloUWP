<Page
    x:Class="DCT.TraineeTasks.HelloUWP.UI.UWP.Views.Pages.EditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="using:DCT.TraineeTasks.HelloUWP.UI.UWP.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5" />
        </Style>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BackButton"
                            Click="BackButton_Click">
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <TextBlock Text="Edit person"
                               FontSize="24" />
                </StackPanel>
                <StackPanel>
                    <TextBox Text="{x:Bind ViewModel.FirstName, Mode=TwoWay}"
                             PlaceholderText="First name" />
                    <TextBox Text="{x:Bind ViewModel.LastName, Mode=TwoWay}"
                             PlaceholderText="Last name" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Add"
                            Command="{x:Bind ViewModel.AddEntryCommand}" />
                    <Button Content="Remove"
                            Command="{x:Bind ViewModel.DeleteEntryCommand}"
                            CommandParameter="{x:Bind EntriesListView.SelectedItem, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>

        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <ListView ItemsSource="{x:Bind ViewModel.Entries, Mode=OneWay}"
              x:Name="EntriesListView">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding Text, Mode=TwoWay}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <d:ListView.Items>
                    <viewmodels:EntryViewModel Text="Text 1"/>
                    <viewmodels:EntryViewModel Text="Text 2"/>
                    <viewmodels:EntryViewModel Text="Text 3"/>
                    <viewmodels:EntryViewModel Text="Loooooooooooooooooooooooooooooooong text"/>
                </d:ListView.Items>

            </ListView>
        </ScrollViewer>
        
        <Button x:Name="DeleteButton"
                HorizontalAlignment="Stretch"
                Grid.Row="2"
                Command="{x:Bind ViewModel.DeleteCommand}"
                Click="DeleteButton_Click">
            <StackPanel Orientation="Horizontal">
                <SymbolIcon Symbol="Delete" />
                <TextBlock>Delete</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Page>
