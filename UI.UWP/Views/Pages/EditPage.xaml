<Page
    x:Class="DCT.TraineeTasks.HelloUWP.UI.UWP.Views.Pages.EditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DCT.TraineeTasks.HelloUWP.UI.UWP.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="5"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </StackPanel.Resources>
        
        <StackPanel Orientation="Horizontal">
            <Button x:Name="BackButton"
                    Click="BackButton_Click">
                <SymbolIcon Symbol="Back"/>
            </Button>
            <TextBlock Text="Edit person"
                       FontSize="24"/>
        </StackPanel>
        <TextBox Text="{x:Bind ViewModel.FirstName, Mode=TwoWay}"
                 PlaceholderText="First name"/>
        <TextBox Text="{x:Bind ViewModel.LastName, Mode=TwoWay}"
                 PlaceholderText="Last name"/>
        <TextBox Text="{x:Bind ViewModel.Entries[0].Text, Mode=TwoWay}"
                 PlaceholderText="Entry"/>
        <Button HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal">
                <SymbolIcon Symbol="Delete"/>
                <TextBlock>Delete</TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
</Page>
